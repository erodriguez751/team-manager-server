<div class="container 0p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/members/updateMember/{{member.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{member.name}}" class="form-control" name="name" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{member.nick_name}}" class="form-control" name="nickName" placeholder="Apodo">
                        </div>
                        <div class="form-group">
                            <input type="email" value="{{member.email}}" class="form-control" name="email" placeholder="Correo Electronico">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>