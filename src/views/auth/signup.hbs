<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="card card-body bg-dark text-white p-5" action="/signup" method="POST">
        <h3 class="text-center fw-bold mb-4">SignUp</h3>

        <label for="name">Nombre</label>
        <input type="type" name="name" placeholder="Diego Rivarola" class="form-control mb-3" autofocus />

        <label for="nickname">Email:</label>
        <input type="type" name="nickname" placeholder="Goku" class="form-control mb-3" />
        
        <label for="email">Email:</label>
        <input type="email" name="email" placeholder="goku" class="form-control mb-3" />

        <label for="password">Write your password:</label>
        <input type="password" name="password1" placeholder="Password" class="form-control mb-3" />

        {{!-- Confirm your password --}}
        <label for="password">Confirm your password:</label>
        <input type="password" name="password2" placeholder="Password" class="form-control mb-3" />

        <button class="btn btn-success btn-block">
          Registrar
        </button>
    </div>
    </form>

    {{! Link }}
    <p class="fs-5 text-center text-white mt-3">Ya tienes una cuenta?
      <a href="/signin" class="text-info">Signin</a>
    </p>
  </div>
</div>